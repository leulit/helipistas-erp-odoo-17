<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="leulit.SemaforoCharField" owl="1">
        <div t-if="!props.value">
            <span>N.A.</span>
        </div>
        <div t-else="">
            <t t-set="value" t-value="props.value.toLowerCase()"/>
            <img t-if="value === 'green'" t-attf-src="/leulit/static/src/images/semaforo_green.png" alt="Verde"/>
            <img t-elif="value === 'yellow'" t-attf-src="/leulit/static/src/images/semaforo_yellow.png" alt="Amarillo"/>
            <img t-elif="value === 'red'" t-attf-src="/leulit/static/src/images/semaforo_red.png" alt="Rojo"/>
            <span t-else="">N.A.</span>
        </div>
    </t>
    
    <t t-name="leulit.SemaforoBooleanField" owl="1">
        <t t-if="props.value === true">
            <img t-attf-src="/leulit/static/src/images/semaforo_green.png" alt="Verde"/>
        </t>
        <t t-elif="props.value === false">
            <img t-attf-src="/leulit/static/src/images/semaforo_red.png" alt="Rojo"/>
        </t>
        <t t-else="">
            <span>N.A.</span>
        </t>
    </t>

</templates>