<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="leulit_20201006_1024_filter" model="ir.ui.view">
            <field name="name">leulit_20201006_1024_filter</field>
            <field name="model">leulit.circular</field>
            <field name="arch" type="xml">
                <search string="Circular filtros">
                    <filter string="No caducadas" name="leulit_20201006_1024_f1_search"  domain="[('caducada','=',False)]" />
                    <filter string="Caducadas" name="leulit_20201006_1024_f2_search"  domain="[('caducada','!=',False)]" />
                    <filter string="Mis pendientes" name="leulit_20201006_1024_f3_search"  domain="[('pendiente','=',True)]" />
                    <separator/>
                    <group expand="0" string="Agrupar por...">
                        <filter name="group_by_area" string="Área" context="{'group_by': 'area'}"/>
                        <filter name="group_by_tipo" string="Tipo" context="{'group_by': 'tipo'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <record model="ir.ui.view" id="leulit_20201006_1024_tree">
            <field name="name">leulit_20201006_1024_tree</field>
            <field name="model">leulit.circular</field>
            <field name="type">tree</field>
            <field name="arch" type="xml" >
                <tree string="Mis Circulares" decoration-success="pendiente==False" decoration-warning="pendiente==True">
                    <field name="pendiente" column_invisible="1"/>
                    <field name="caducada" column_invisible="1"/>
                    <field name="is_mine" column_invisible="1"/>
                    <field name="name"/>
                    <field name="fecha_emision"/>
                    <field name="fecha_fin"/>
                    <field name="area"/>
                    <field name="tipo"/>
                    <field name="autor_id"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="leulit_20230515_1551_tree">
            <field name="name">leulit_20230515_1551_tree</field>
            <field name="model">leulit.circular</field>
            <field name="type">tree</field>
            <field name="arch" type="xml" >
                <tree string="Circulares" decoration-success="pendiente_todos==False" decoration-warning="pendiente_todos==True">
                    <field name="pendiente_todos" column_invisible="1"/>
                    <field name="caducada" column_invisible="1"/>
                    <field name="is_mine" column_invisible="1"/>
                    <field name="name"/>
                    <field name="fecha_emision"/>
                    <field name="fecha_fin"/>
                    <field name="area"/>
                    <field name="tipo"/>
                    <field name="autor_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="leulit_20201006_1024_form">
            <field name="name">leulit_20201006_1024_form</field>
            <field name="model">leulit.circular</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Circular">
                    <header>
                        <button name="enviarEmail" class="oe_highlight" type="object" string="Enviar email"/>
                    </header>
                    <sheet>
                        <field name="id" invisible="1"/>
                        <group>
                            <group>
                                <field name="fecha_emision"/>
                                <field name="area" options="{'no_create': True, 'edit': False, 'no_open':true}"/>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="fecha_fin"/>
                                <field name="tipo" />
                                <field name="autor_id"/>
                            </group>
                        </group>
                        <group>
                            <field name="description"/>
                            <field name="historial_ids" nolabel="1" colspan="2">
                                <tree string="historial_ids" editable="bottom">
                                    <field name="partner_id" options="{'no_create': True, 'edit': False, 'no_open':true}"/>
                                    <field name="partner_email" string="Email"/>
                                    <field name="user_id" column_invisible="1"/>
                                    <field name="enviado"/>
                                    <field name="recibido"/>
                                    <field name="leido"/>
                                    <field name="entendido"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        
        
        <!-- MIS CIRCULARES -->
        <record id="leulit_20201006_1024_action" model="ir.actions.act_window">
            <field name="name">Circular</field>
            <field name="res_model">leulit.circular</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_mine','=',True)]</field>
            <field name="context">{"search_default_leulit_20201006_1024_f1_search":1}</field>
        </record>
        <record id="leulit_20201006_1024_action_tree" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="leulit_20201006_1024_tree" />
            <field name="act_window_id" ref="leulit_20201006_1024_action" />
        </record>
        <record id="leulit_20201006_1024_action_form" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="leulit_20201006_1024_form" />
            <field name="act_window_id" ref="leulit_20201006_1024_action" />
        </record>

        <!-- TODAS LAS CIRCULARES -->
        <record id="leulit_20220509_1040_action" model="ir.actions.act_window">
            <field name="name">Circular</field>
            <field name="res_model">leulit.circular</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{"search_default_leulit_20201006_1024_f1_search":1}</field>
        </record>
        <record id="leulit_20220509_1040_action_tree" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="leulit_20230515_1551_tree" />
            <field name="act_window_id" ref="leulit_20220509_1040_action" />
        </record>
        <record id="leulit_20220509_1040_action_form" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="leulit_20201006_1024_form" />
            <field name="act_window_id" ref="leulit_20220509_1040_action" />
        </record>



        <record id="leulit_circular_template" model="mail.template">
            <field name="name">Helipistas reminder mail template</field>
            <field name="email_from">erphelipistas@helipistas.com</field>
            <field name="email_to">{{ ctx.get('mail_to') }}</field>
            <field name="model_id" ref="model_leulit_circular" />
            <field name="auto_delete" eval="True" />
            <field name="subject">Circular - ${ctx.get('fecha')} - ${ctx.get('nombre')}</field>
            <field name="body_html"><![CDATA[
                <table width=100%>
                	<tr>
		            	<td style="text-align:left;vertical-align: middle" colspan="3">
		                	<img src="https://s3-eu-west-1.amazonaws.com/helimisc/helipistas_logo.jpg" />
		               	</td>
		            </tr>
		            <tr>
                		<td style="text-align:center; background-color:lightgrey;" colspan="3"><b>${ctx.get('nombre')}</b></td>
                	</tr>
                	<tr><td colspan="3"></td></tr>
                	<tr>
						<td width=15%>
							<table>
								<tr>
								    <td width=15%><b>AUTOR</b></td>
                					<td width=2%></td>
                					<td width=15%>${ctx.get('autor')}</td>
								</tr>
								<tr>
									<td><b>ÁREA</b></td>
									<td></td>
									<td>${ctx.get('area')}</td>
								</tr>
								<tr>
									<td><b>FECHA EMISIÓN</b></td>
									<td></td>
									<td>${ctx.get('fecha')}</td>
								</tr>
								<tr>
									<td><b>FECHA FIN</b></td>
									<td></td>
									<td>${ctx.get('fecha_fin')}</td>
								</tr>
							</table>
						</td>
                		<td width=2%></td>
                        
                	</tr>
		            <tr>
                		<td style="text-align:center; background-color:lightgrey;" colspan="3"></td>
                	</tr>
                    <tr>
                		<td style="text-align:justify;vertical-align:top;"  width=66%>${object.description | safe}</td>
                	</tr>
                </table>
            ]]>
            </field>
        </record>



    </data>
</odoo>