    <!-- Regla de registro: permitir acceso completo a adjuntos para usuarios RBase -->
    <record id="leulit_20251114_1130_attachment_orphan_rule" model="ir.rule">
        <field name="name">RBase: Allow attachments (full access)</field>
        <field name="model_id" ref="base.model_ir_attachment"/>
        <field name="groups" eval="[(4, ref('leulit.RBase'))]"/>
        <!-- Permitimos acceso completo a todos los adjuntos para el grupo RBase.
             Esto es necesario porque varios modelos usan _inherits con ir.attachment
             (leulit.maintenance_manual, etc.) y necesitan permisos completos. -->
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

