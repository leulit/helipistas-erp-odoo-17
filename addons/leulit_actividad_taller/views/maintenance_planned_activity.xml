                <xpath expr="//field[@name='job_card_id']" position="after">
                    <field name="tipos_actividad" widget="many2many_tags" options="{'no_create_edit': True,'no_create': True}" />
                </xpath>
            </field>
        </record>

    </data>
</odoo>
