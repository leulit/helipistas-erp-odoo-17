<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="ir_cron_send_notify_stock_minimo_email" model="ir.cron">
            <field name="name">LEULIT - Enviar email notificación stock minimo</field>
            <field name="model_id" ref="model_stock_warehouse_orderpoint"/>
            <field name="state">code</field>
            <field name="code">model.notify_stock_minimo()</field>
            <field name="active" eval="False"/>
            <field name="interval_number">7</field>
            <field name="interval_type">days</field>
            <field name="numbercall" eval="-1"/>
        </record>

        <record id="email_template_notify_stock_minimo" model="mail.template">
            <field name="name">Notificación de Stock Mínimo</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="subject">Notificación de Stock Mínimo</field>
            <field name="email_from">erp@helipistas.com</field>
            <field name="email_to">almacen@icarus-manteniment.com</field>
            <field name="body_html" type="html">
                <div>
                    <t t-if="ctx.get('values_flag')">
                        <p>A continuación se detallan los siguientes productos que no llegan a la cantidad mínima en stock:</p>
                        
                        <t t-foreach="ctx.get('email_values', {})" t-as="producto">
                            <t t-set="datos" t-value="ctx.get('email_values')[producto]"/>
                            
                            <div style="margin-bottom: 15px; border-left: 4px solid #f0ad4e; padding-left: 10px;">
                                <p style="margin: 0 0 5px 0;">
                                    <strong><t t-out="producto"/></strong>
                                </p>
                                <p style="margin: 0; font-size: 13px;">
                                    <strong>Cantidad en Stock:</strong> <t t-out="datos.get('qty')"/><br/>
                                    <strong>Cantidad Mínima:</strong> <t t-out="datos.get('min_qty')"/>
                                </p>
                            </div>
                        </t>
                    </t>
                    
                    <t t-else="">
                        <p>No hay ningún producto que esté por debajo de la cantidad mínima en el listado de Stock Mínimo.</p>
                    </t>
                </div>
            </field>
        </record>

    </data>
</odoo>