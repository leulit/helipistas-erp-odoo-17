<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="ir_cron_send_notify_stock_minimo_email" model="ir.cron">
            <field name="name">LEULIT - Enviar email notificación stock minimo</field>
            <field name="model_id" ref="model_stock_warehouse_orderpoint"/>
            <field name="state">code</field>
            <field name="code">model.notify_stock_minimo()</field>
            <field name="active" eval="False"/>
            <field name="interval_number">7</field>
            <field name="interval_type">days</field>
            <field name="numbercall" eval="-1"/>
        </record>

        <record id="email_template_notify_stock_minimo" model="mail.template">
            <field name="name">Notificación de Stock Mínimo</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="subject">Notificación de Stock Mínimo</field>
            <field name="email_from">erp@helipistas.com</field>
            <field name="email_to">almacen@icarus-manteniment.com</field>
            <field name="body_html"><![CDATA[
                % if ctx.get('values_flag'):
                    <p>A continuación se detallan los siguientes productos que no llegan a la cantidad minima en stock:</p
                    % for producto, datos in ctx.get('email_values', {}).items():
                        <br/>
                        <p><strong>${producto}</strong></p>
                        <p><strong>Cantidad en Stock:</strong> ${datos['qty']}</p>
                        <p><strong>Cantidad Minima:</strong> ${datos['min_qty']}</p>
                    % endfor
                % else:
                    <p>No hay ningun producto que este por debajo de la cantidad minima en el listado de Stock Minimo.</p>
                % endif
            ]]></field>
        </record>

    </data>
</odoo>