<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="ir_cron_send_notify_expiration_date_email" model="ir.cron">
            <field name="name">LEULIT - Enviar email notificación piezas caducadas</field>
            <field name="model_id" ref="model_stock_lot"/>
            <field name="state">code</field>
            <field name="code">model.notify_expiration_date()</field>
            <field name="active" eval="False"/>
            <field name="interval_number">7</field>
            <field name="interval_type">days</field>
            <field name="numbercall" eval="-1"/>
        </record>

        <record id="email_template_notify_expiration_date" model="mail.template">
            <field name="name">Notificación de Piezas Caducadas</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="subject">Notificación de Piezas Caducadas</field>
            <field name="email_from">erp@helipistas.com</field>
            <field name="email_to">almacen@icarus-manteniment.com</field>
            <field name="body_html" type="html">
                <div>
                    <t t-if="ctx.get('values_flag')">
                        <p>A continuación se detallan las siguientes piezas que están caducadas:</p>
                        
                        <t t-foreach="ctx.get('email_values', {})" t-as="pieza">
                            <t t-set="datos" t-value="ctx.get('email_values')[pieza]"/>
                            
                            <div style="margin-bottom: 15px; border-left: 4px solid #d9534f; padding-left: 10px;">
                                <p style="margin: 0 0 5px 0;">
                                    <strong><t t-out="pieza"/></strong>
                                </p>
                                <p style="margin: 0; font-size: 13px;">
                                    <strong>Cantidad en Stock:</strong> <t t-out="datos.get('qty')"/><br/>
                                    <strong>Fecha de Caducidad:</strong> <t t-out="datos.get('fecha_caducidad')"/>
                                </p>
                            </div>
                        </t>
                    </t>
                    
                    <t t-else="">
                        <p>No hay ninguna pieza caducada.</p>
                    </t>
                </div>
            </field>
        </record>

    </data>
</odoo>