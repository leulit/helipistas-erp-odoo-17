<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="leulit_20241004_1004_form" model="ir.ui.view">
            <field name="name">leulit_20241004_1004_form</field>
            <field name="model">stock.move_scrap</field>
            <field name="arch" type="xml">
                <form string="Scrap">
                    <header>
                        <button name="action_validate" invisible="state == 'draft'" string="Validate" type="object" class="oe_highlight" context="{'not_unlink_on_discard': True}" />
                        <field name="state" widget="statusbar" statusbar_visible="draft,done" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="action_get_stock_picking"
                                    string="Stock Operation" type="object"
                                     invisible="((not picking_id))"  icon="fa-cogs"/>
                            <field name="picking_id" invisible="1"/>
                            <button class="oe_stat_button" name="action_get_stock_move_lines"
                                    string="Product Moves" type="object"
                                     invisible="((not move_id))"  icon="fa-exchange"/>
                            <field name="move_id" invisible="1"/>
                        </div>
                        <separator string="Movimiento Scrap"/>
                        <div class="oe_title">
                            <h1><field name="name" nolabel="1"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="lot_id" context="{'default_company_id': company_id, 'tree_view_ref': 'leulit_almacen.leulit_20230404_1151_tree'}"  groups="stock.group_production_lot" options="{'no_create': True, 'create': False, 'edit': False}"/>
                                <field name="product_id" invisible="True"/>
                                <label for="qty" string="Cantidad"/>
                                <div class="o_row">
                                    <field name="qty"/>
                                    <field name="product_uom_category_id" invisible="1"/>
                                    <field name="product_uom_id" groups="uom.group_uom" force_save="1"/>
                                </div>
                                <field name="qty_available"/>
                                <field name="company_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="tracking" invisible="1"/>
                                <field name="owner_id" groups="stock.group_tracking_owner" invisible="True"/>
                                <field name="location_id" options="{'no_create': True, 'no_open': True}" groups="stock.group_stock_multi_locations" force_save="1"/>
                                <field name="dest_location_id" options="{'no_create': True, 'no_open': True}" groups="stock.group_stock_multi_locations" force_save="1" readonly="True"/>
                                <field name="origin"/>
                                <field name="date_done"/>
                                <field name="picking_id" invisible="True"/>
                                <field name="company_id" groups="base.group_multi_company" invisible="True"/>
                                <field name="maintenance_request_id" options="{'no_create': True, 'no_open': True}"/>
                                <field name="equipment"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="leulit_20241004_1004_action">
            <field name="name">Movimiento Scrap</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.move_scrap</field>
            <field name="view_mode">form</field>
        </record>

    
</odoo>
