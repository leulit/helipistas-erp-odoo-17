<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista formulario del wizard de exportación -->
    <record id="view_mgmtsystem_risk_export_wizard_form" model="ir.ui.view">
        <field name="name">mgmtsystem.risk.export.wizard.form</field>
        <field name="model">mgmtsystem.risk.export.wizard</field>
        <field name="arch" type="xml">
            <form string="Exportar Análisis de Riesgos">
                <group states="draft">
                    <group>
                        <field name="asset_ids" widget="many2many_tags"/>
                        <field name="threat_ids" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="only_high_critical"/>
                        <field name="include_treatment_plan"/>
                    </group>
                </group>
                
                <group states="done">
                    <field name="file_data" filename="file_name"/>
                    <field name="file_name" invisible="1"/>
                </group>
                
                <field name="state" invisible="1"/>
                
                <footer>
                    <button string="Exportar a CSV" 
                            name="action_export_csv" 
                            type="object" 
                            class="btn-primary"
                            states="draft"/>
                    <button string="Volver" 
                            name="action_back" 
                            type="object"
                            states="done"/>
                    <button string="Cerrar" 
                            special="cancel" 
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción para abrir el wizard -->
    <record id="action_mgmtsystem_risk_export_wizard" model="ir.actions.act_window">
        <field name="name">Exportar a CSV</field>
        <field name="res_model">mgmtsystem.risk.export.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
