<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_leulit_riesgo" model="ir.ui.view">
        <field name="name">res.config.settings.form.leulit.riesgo</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.view_res_config_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='settings']" position="inside">
                <div class="app_settings_block" data-string="PART-IS (SGSI)" data-key="leulit_partis">
                    <h2>PART-IS (SGSI)</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6">
                            <h3 class="oe_inline">Umbrales de Activos</h3>
                            <div class="row mt8">
                                <div class="col-6">
                                    <field name="magerit_asset_level_low"/>
                                </div>
                                <div class="col-6">
                                    <field name="magerit_asset_level_medium"/>
                                </div>
                                <div class="col-6 mt8">
                                    <field name="magerit_asset_level_high"/>
                                </div>
                                <div class="col-6 mt8">
                                    <field name="magerit_asset_level_critical"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6">
                            <h3 class="oe_inline">Umbrales de Riesgo</h3>
                            <div class="row mt8">
                                <div class="col-6">
                                    <field name="magerit_risk_level_low"/>
                                </div>
                                <div class="col-6">
                                    <field name="magerit_risk_level_medium"/>
                                </div>
                                <div class="col-6 mt8">
                                    <field name="magerit_risk_level_high"/>
                                </div>
                                <div class="col-6 mt8">
                                    <field name="magerit_risk_level_critical"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
