<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

         <record id="leulit_20230817_1523_form" model="ir.ui.view">
            <field name="name">mail.activity.view.form.popup</field>
            <field name="model">mail.activity</field>
            <field name="priority">30</field>
            <field name="arch" type="xml">
                <form string="Log an Activity" create="false">
                    <sheet string="Activity">
                        <group invisible="1">
                            <field name="activity_category" invisible="1" />
                            <field name="res_model" invisible="1"/>
                            <field name="res_model_id" invisible="1"/>
                            <field name="res_id" invisible="1" widget="integer"/>
                            <field name="previous_activity_type_id"/>
                            <field name="has_recommended_activities"/>
                        </group>
                        <group  invisible="((not has_recommended_activities))" >
                            <div class="o_row">
                                <strong>Recommended Activities</strong>
                                <field name="recommended_activity_type_id" widget="selection_badge"
                                    domain="[('previous_type_ids', '=', previous_activity_type_id)]"
                                    nolabel="1"/>
                            </div>
                        </group>
                        <group>
                            <group>
                                <field name="activity_type_id" required="1" options="{'no_create': True, 'no_open': True}"/>
                                <field name="summary" placeholder="e.g. Discuss proposal"/>
                            </group>
                            <group>
                                <field name="date_deadline"/>
                                <field name="user_id"/>
                            </group>
                        </group>
                        <field name="note" placeholder="Log a note..."/>
                        <div>
                            <button string="Abrir" name="open_window_for_model_of_activity" type="object" class="btn-primary"
                                 invisible="((not id))" />
                            <button string="Marcar como Hecho" name="action_done"
                                type="object" class="btn-secondary"
                                context="{'mail_activity_quick_update': True}"/>
                            <button string="¡Hecho! Planificar siguiente" name="action_done_schedule_next"
                                type="object" class="btn-secondary"
                                context="{'mail_activity_quick_update': True}"/>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="leulit_20230817_1523_calendar" model="ir.ui.view">
            <field name="name">mail.activity.view.calendar</field>
            <field name="model">mail.activity</field>
            <field name="priority" eval="30"/>
            <field name="arch" type="xml">
                <calendar create="false" delete="0" event_open_popup="true" string="Activity" mode="month" date_start="date_deadline" color="activity_type_id">
                    <field name="user_id" avatar_field="image_128"/>
                    <field name="res_name"/>
                    <field name="date_deadline"/>
                    <field name="activity_type_id"/>
                    <field name="summary"/>
                    <field name="activity_type_id" filters="1" invisible="1"/>
                </calendar>
            </field>
        </record>


        <record id="leulit_20230817_1523_action" model="ir.actions.act_window">
            <field name="name">Calendario de Gestión</field>
            <field name="res_model">mail.activity</field>
            <field name="view_mode">calendar,form</field>
            <field name="domain">[('user_id','=',uid)]</field>
        </record>
        <record id="leulit_20230817_1523_action_calendar" model="ir.actions.act_window.view">
            <field name="sequence" eval="0"/>
            <field name="view_mode">calendar</field>
            <field name="view_id" ref="leulit_20230817_1523_calendar"/>
            <field name="act_window_id" ref="leulit_20230817_1523_action"/>
        </record>
        <record id="leulit_20230817_1523_action_form" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="leulit_20230817_1523_form"/>
            <field name="act_window_id" ref="leulit_20230817_1523_action"/>
        </record>

    </data>
</odoo>