<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        
        <record model="ir.ui.view" id="leulit_20200827_1515_form">
            <field name="name">leulit_20200827_1515_form</field>
            <field name="model">leulit.reunion</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Reunion">
                    <header>
                        <button name="finalizar_reunion" type="object" string="Finalizar ReuniÃ³n"
                             invisible="((end_meeting))"  class="oe_right oe_highlight"/>
                        <button name="create_task" type="object" string="Crear Tarea"
                             invisible="((not end_meeting))"  class="oe_right oe_highlight"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_tasks" type="object" class="oe_stat_button" icon="fa-tasks"  invisible="((not task_ids))"  >
                                <field string="Tasks" name="task_count" widget="statinfo"/>
                            </button>
                        </div>
                        <field name="task_ids" invisible="1"/>
                        <group col="1">
                            <group col="2">
                                <field name="end_meeting" readonly="1"/>
                                <field name="asunto"/>
                                <field name="tipo_meeting" widget="many2many_tags" options="{'no_create': True, 'edit': False, 'no_open':true}"/>
                            </group>
                            <group col="2">
                                <h3>Asistentes</h3>
                                <h3 invisible="1">Recursos ocupados</h3>
                                <field name="asistentes" nolabel="1">
                                    <tree create="true" edit="true" editable="bottom">
                                        <field name="partner_id" options="{'no_create': True, 'edit': False, 'no_open':true}"/>
                                        <field name="asistencia" string="Asistencia"/>
                                    </tree>
                                </field>
                                <field name="recursos_disponibles" nolabel="1" invisible="1">
                                    <tree create="0">
                                        <field name="resource" domain="[('active','=',True)]"/>
                                        <field name="hora_ini" widget="float_time"/>
                                        <field name="hora_fin" widget="float_time"/>
                                    </tree>
                                </field>
                            </group>
                            <group col="2">
                                <group>
                                    <field name="company_id" options="{'no_create': True, 'edit': False, 'no_open':true}" group="base.group_multi_company"/>
                                    <field name="location"/>
                                    <field name="user_id" options="{'no_create': True, 'edit': False, 'no_open':true}"/>
                                    <field name="cliente" options="{'no_create': True, 'edit': False, 'no_open':true}"/>
                                    <field name="presupuesto_id"
                                        options="{'no_create': True, 'edit': False, 'no_open':true}"
                                        context="{'tree_view_ref':'helipistas.hlp_view_tareas_saleorder_tree'}"/>
                                </group>
                                <group col="4">
                                    <field name="fecha_ini" string="Fecha"  readonly="((end_meeting))" />
                                    <field name="hora_inicio_evento" widget="float_time"  readonly="((end_meeting))" />
                                    <field name="duration" widget="float_time"  readonly="((end_meeting))" />
                                    <field name="hora_fin_evento" widget="float_time" readonly="1"/>
                                </group>
                            </group>
                            <group>
                                <field name="rel_meeting" readonly="1" invisible="1"/>
                                <field name="descripcion" string="Orden del dia"/>
                                <field name="documentos" widget="many2many_binary"/>
                                <field name="acta_reunion" widget="text_ckeditor4"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>



        <record model="ir.ui.view" id="leulit_20200827_1515_tree">
            <field name="name">leulit_20200827_1515_tree</field>
            <field name="model">leulit.reunion</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Reunion" decoration-success="pendiente==False" decoration-warning="pendiente==True">
                    <field name="pendiente" invisible="1"/>
                    <field name="asunto"/>
                    <field name="tipo_reunion"/>
                    <field name="fecha_ini"/>
                    <field name="user_id"/>
                    <field name="cliente"/>
                    <field name="location"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="leulit_20230515_1544_tree">
            <field name="name">leulit_20230515_1544_tree</field>
            <field name="model">leulit.reunion</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Mis Reunion" decoration-success="pendiente_mine==False" decoration-warning="pendiente_mine==True">
                    <field name="pendiente_mine" invisible="1"/>
                    <field name="is_mine" invisible="1"/>
                    <field name="asunto"/>
                    <field name="tipo_reunion"/>
                    <field name="fecha_ini"/>
                    <field name="user_id"/>
                    <field name="cliente"/>
                    <field name="location"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>


        <record id="leulit_20200827_1515_action" model="ir.actions.act_window">
            <field name="name">Mis Reuniones</field>
            <field name="res_model">leulit.reunion</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_mine','=',True)]</field>
        </record>
        <record id="leulit_20200827_1515_action_tree" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="leulit_20230515_1544_tree" />
            <field name="act_window_id" ref="leulit_20200827_1515_action" />
        </record>
        <record id="leulit_20200827_1515_action_form" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="leulit_20200827_1515_form" />
            <field name="act_window_id" ref="leulit_20200827_1515_action" />
        </record>

        <record id="leulit_20220815_1111_action" model="ir.actions.act_window">
            <field name="name">Reuniones</field>
            <field name="res_model">leulit.reunion</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="leulit_20220815_1111_action_tree" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="leulit_20200827_1515_tree" />
            <field name="act_window_id" ref="leulit_20220815_1111_action" />
        </record>
        <record id="leulit_20220815_1111_action_form" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="leulit_20200827_1515_form" />
            <field name="act_window_id" ref="leulit_20220815_1111_action" />
        </record>



        <record model="ir.ui.view" id="leulit_wizard_reunion_create_task">
            <field name="name">wizard_reunion_create_task</field>
            <field name="model">leulit.wizard_reunion_create_task</field>
            <field name="arch" type="xml">
                <form string="Crear Tarea">
                    <div class="oe_title pr-0">
                        <h1 class="d-flex flex-row justify-content-between">
                            <field name="name" class="o_task_name text-truncate" placeholder="Task Title..." default_focus="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="project_id"/>
                            <field name="user_id" required="1" options="{'no_create': True, 'edit': False, 'no_open':true}"/>
                            <field name="claim_id" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                            <field name="partner_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="date_deadline" />
                        </group>
                    </group>
                    <footer>
                        <button name="create_task" string="Create" type="object" class="btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>


    </data>
</odoo>