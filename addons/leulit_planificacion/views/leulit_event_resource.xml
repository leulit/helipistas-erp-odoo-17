        <record id="leulit_20200918_1041_action" model="ir.actions.act_window">
            <field name="name">Por persona</field>
            <field name="res_model">leulit.event_resource</field>
            <field name="view_mode">calendar,tree,form</field>
            <field name="domain">[('type','=','persona')]</field>
            <field name="context">{'color_by_value':'1','color_field_label':'resource','cal_off_empty_clk':1,'cal_hide_del_evt':'1'}</field>
        </record>

