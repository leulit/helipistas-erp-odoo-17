<odoo>
        <!-- Verification Lines -->

        <record id="leulit_20240320_1122_tree" model="ir.ui.view">
            <field name="name">mgmtsystem.verification.line.tree.leulit</field>
            <field name="model">mgmtsystem.verification.line</field>
            <field name="inherit_id" ref="mgmtsystem_audit.view_mgmtsystem_verification_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="replace">
                    <field name="question_id"/>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="name" invisible="1"/>
                </xpath>
            </field>
        </record>

        <record id="leulit_20240320_1122_form" model="ir.ui.view">
            <field name="name">mgmtsystem.verification.line.form.leulit</field>
            <field name="model">mgmtsystem.verification.line</field>
            <field name="inherit_id" ref="mgmtsystem_audit.view_mgmtsystem_verification_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="replace">
                    <field name="question_id" domain="[('id', 'not in', questions_audit_ids)]"/>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="replace">
                    <field name="company_id" invisible="1"/>
                    <field name="name" invisible="1"/>
                    <field name="questions_audit_ids" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='procedure_id']" position="replace">
                    <field name="norma" readonly="1" force_save="1"/>
                    <field name="procedure_id" readonly="1" force_save="1"/>
                    <field name="notas" readonly="1" force_save="1"/>
                </xpath>
                <xpath expr="//field[@name='is_conformed']" position="replace">
                    <field name="conforme" />
                </xpath>
            </field>
        </record>
    
        <record model="ir.ui.view" id="leulit_20240722_1511_form">
			<field name="name">leulit_20240722_1511_form</field>
			<field name="model">mgmtsystem.verification.line</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Adjuntar Documentos">
					<group col="1">
						<h3>Selecciona todos los archivos que deseas adjuntar:</h3>
						<field name="rel_docs" nolabel="1"/>
					</group>
                    <footer>
                        <field name="id" invisible="1"/>
                        <button string="Guardar y cerrar" name="action_close" type="object" class="btn-primary"/>
                        <button string="Descartar" class="btn-secondary" special="cancel"/> 
                    </footer>
				</form>
			</field>
		</record>


        <!-- Audits -->
        <record id="leulit_20240320_1123_form" model="ir.ui.view">
            <field name="name">mgmtsystem.audit.form.leulit</field>
            <field name="model">mgmtsystem.audit</field>
            <field name="inherit_id" ref="mgmtsystem_audit.view_mgmtsystem_audit_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="replace">
                    <form string="Audit">
                        <header>
                            <button name="button_close_informe" string="Cerrar Auditoria" class="oe_highlight" invisible="state != 'open'" type="object"/>
                            <button name="button_open" string="Abrir Auditoria" class="oe_highlight" invisible="state != 'draft'" type="object"/>
                            <button name="button_draft" string="Establecer a Borrador" class="oe_highlight" invisible="state != 'done'" type="object"/>
                            <field name="state" widget="statusbar" select="1" readonly="1"/>
                        </header>
                        <sheet>
                            <group col="4" colspan="2">
                                <field name="name"  readonly="((state == 'done'))" />
                                <field name="reference"/>
                                <field name="date"  readonly="((state == 'done'))" />
                                <field name="user_id" string="Gerente de auditoría" required="1"  readonly="((state == 'done'))" />
                                <field name="company_id" groups="base.group_multi_company"/>
                                <field name="department_id"  readonly="((state == 'done'))" />
                                <field name="last_revision_norma"  readonly="((state == 'done'))" />
                            </group>
                            <notebook colspan="4">
                                <page string="Auditores">
                                    <field name="auditor_user_ids" nolabel="1"  readonly="((state == 'done'))"  options="{'no_create': True}" context="{'tree_view_ref': 'mgmtsystem_audit.mgmtsystem_audit_res_users_x2m_tree'}"/>
                                </page>
                                <page string="Auditados">
                                    <field name="auditee_user_ids" nolabel="1"  readonly="((state == 'done'))"  options="{'no_create': True}" context="{'tree_view_ref': 'mgmtsystem_audit.mgmtsystem_audit_res_users_x2m_tree'}"/>
                                </page>
                                <page string="Lista de verificación">
                                    <group>
                                        <field name="procedimiento_id" options="{'no_create': True, 'edit': False, 'no_open':true}"/>
                                    </group>
                                    <field name="line_ids" nolabel="1"  readonly="((state == 'done'))"  context="{'form_view_ref': 'leulit_seguridad.leulit_20240320_1122_form'}">
                                        <tree>
                                            <field name="seq"/>
                                            <field name="name" widget="text"/>
                                            <field name="procedure_id"/>
                                            <field name="norma" widget="text"/>
                                            <field name="conforme"/>
                                            <field name="comments" widget="text"/>
                                            <field name="company_id" groups="base.group_multi_company" column_invisible="1"/>
                                            <button name="action_get_attachment_view" string="Añadir Adjuntos" type="object" icon="fa-paperclip"/>
                                        </tree>
                                    </field>
                                </page>
                                <page string="Informe de Cierre">
                                    <group col="2">
                                        <field name="closing_date"/>
                                        <field name="close_text"/>
                                    </group>
                                    <group col="4">
                                        <field name="responsible_department_id"/>
                                        <field name="responsible_audit_id"/>
                                    </group>
                                </page>
                            </notebook>
                        </sheet>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                    </form>
                </xpath>
            </field>
        </record>

        <record id="leulit_20240320_1123_tree" model="ir.ui.view">
            <field name="name">mgmtsystem.audit.tree</field>
            <field name="model">mgmtsystem.audit</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Plan de Auditorías">
                    <field name="name"  readonly="((state == 'done'))" />
                    <field name="date"  readonly="((state == 'done'))" />
                    <field name="reference"/>
                    <field name="procedimiento_id"/>
                    <field name="department_id"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="state" column_invisible="1"/>
                </tree>
            </field>
        </record>


        <record id="leulit_20240320_1123_action" model="ir.actions.act_window">
            <field name="name">Plan de Auditorías</field>
            <field name="res_model">mgmtsystem.audit</field>
            <field name="view_mode">tree,form,calendar</field>
            <field name="search_view_id" ref="mgmtsystem_audit.view_mgmtsystem_audit_filter"/>
            <field name="context">{"search_default_current":1}</field>
        </record>
        <record id="leulit_20240320_1123_action_tree" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="leulit_20240320_1123_tree" />
            <field name="act_window_id" ref="leulit_20240320_1123_action" />
        </record>
        <record id="leulit_20240320_1123_action_form" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="leulit_20240320_1123_form" />
            <field name="act_window_id" ref="leulit_20240320_1123_action" />
        </record>


        <record id="leulit_20241017_1115_form" model="ir.ui.view">
            <field name="name">leulit_20241017_1115_form</field>
            <field name="model">mgmtsystem.audit</field>
            <field name="arch" type="xml">
                <form>
                    <group col="2">
                        <field name="closing_date" string="Fecha de cierre" required="True"/>
                        <field name="close_text" required="True"/>
                    </group>
                    <group col="4">
                        <field name="responsible_department_id" required="True"/>
                        <field name="responsible_audit_id" required="True"/>
                    </group>
                    <footer>
                        <button string="Guardar" name="save_close" type="object" class="btn-primary"/>
                        <button string="Descartar" class="btn-secondary" special="cancel"/> 
                    </footer>
                </form>
            </field>
        </record>


</odoo>
