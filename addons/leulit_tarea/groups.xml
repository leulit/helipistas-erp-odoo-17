<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record model="ir.module.category" id="tarea_rol_category">
            <field name="name">Rol Tarea</field>
            <field name="description">Rol Tarea</field>
        </record>


        <record id="RT_base" model="res.groups">
            <field name="name">Base</field>
            <field name="category_id" ref="tarea_rol_category"/>
        </record>
        
        <record id="RT_administrador" model="res.groups">
            <field name="name">Administración</field>
            <field name="implied_ids" eval="[(4, ref('RT_base'))]"/>
            <field name="category_id" ref="tarea_rol_category"/>
        </record>

        <record id="RT_gestor" model="res.groups">
            <field name="name">Gestor</field>
            <field name="implied_ids" eval="[(4, ref('RT_administrador'))]"/>
            <field name="category_id" ref="tarea_rol_category"/>
        </record>

        <!-- Grupo específico para gestión de etapas de proyectos y tareas -->
        <record id="RT_proyectos_tareas_administrador" model="res.groups">
            <field name="name">Administrador de Etapas de Proyectos y Tareas</field>
            <field name="comment">Control total sobre etapas: crear, modificar, eliminar y normalizar</field>
            <field name="category_id" ref="tarea_rol_category"/>
        </record>


    </data>
</odoo>