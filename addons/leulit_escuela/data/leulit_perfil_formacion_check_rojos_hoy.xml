<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="ir_cron_send_check_pf_hoy_email" model="ir.cron">
            <field name="name">LEULIT - Enviar email de perfiles de formacion diario</field>
            <field name="model_id" ref="model_leulit_perfil_formacion"/>
            <field name="state">code</field>
            <field name="code">model.check_perfiles_caducados_hoy()</field>
            <field name="active" eval="False"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall" eval="-1"/>
        </record>

        <record id="email_template_check_pf_hoy" model="mail.template">
            <field name="name">Notificación perfiles de formación diario</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="subject">Avui caduquen els següents perfils de formació</field>
            <field name="email_from">erp@helipistas.com</field>
            <field name="email_to">jgarcia@helipistas.com</field>
            <field name="body_html" type="html">
                <div>
                    <p>A continuació es detallen els cursos i accions que caduquen avui, agrupats per perfil de formació:</p>
                    
                    <t t-foreach="ctx.get('email_values', {})" t-as="perfil">
                        <t t-set="values" t-value="ctx.get('email_values')[perfil]"/>
                        
                        <t t-if="values.get('cursos') or values.get('acciones')">
                            
                            <div style="margin-top: 15px; border-bottom: 1px solid #eee; padding-bottom: 10px;">
                                <p style="color: #875A7B; font-size: 14px;">
                                    <strong>Perfil: <t t-out="perfil"/></strong>
                                </p>
                                
                                <t t-if="values.get('cursos')">
                                    <div style="padding-left: 20px;">
                                        <p><strong>Cursos:</strong></p>
                                        <ul>
                                            <t t-foreach="values['cursos']" t-as="curso">
                                                <li><t t-out="curso"/></li>
                                            </t>
                                        </ul>
                                    </div>
                                </t>
                                
                                <t t-if="values.get('acciones')">
                                    <div style="padding-left: 20px;">
                                        <p><strong>Acciones:</strong></p>
                                        <ul>
                                            <t t-foreach="values['acciones']" t-as="accion">
                                                <li><t t-out="accion"/></li>
                                            </t>
                                        </ul>
                                    </div>
                                </t>
                            </div>
                        </t>
                    </t>
                    
                    <p t-if="not ctx.get('email_values')">
                        <em>No hi ha caducitats per avui.</em>
                    </p>
                </div>
            </field>
        </record>

    </data>
</odoo>
