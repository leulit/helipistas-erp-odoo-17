<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="ir_cron_send_check_partes_escuela_sin_verificar_email" model="ir.cron">
            <field name="name">LEULIT - Enviar email check partes escuela sin verificar</field>
            <field name="model_id" ref="model_leulit_parte_escuela"/>
            <field name="state">code</field>
            <field name="code">model.check_partes_sin_verificar()</field>
            <field name="active" eval="False"/>
            <field name="interval_number">1</field>
            <field name="interval_type">weeks</field>
            <field name="numbercall" eval="-1"/>
        </record>

        <record id="email_template_check_partes_escuela_sin_verificar" model="mail.template">
            <field name="name">Notificación Check Partes de Escuela sin Verificar</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="subject">Partes de Escuela sin Verificar</field>
            <field name="email_from">erp@helipistas.com</field>
            <field name="email_to">{{ ctx.get('mail_to') }}</field>
            <field name="body_html" type="html">
                <div>
                    <p>A continuación se detallan los partes de escuela que están cerrados a falta de verificar:</p>
                    
                    <t t-foreach="ctx.get('email_values', {})" t-as="alumno">
                        
                        <t t-set="partes" t-value="ctx.get('email_values')[alumno]"/>
                        
                        <div style="margin-bottom: 15px; border: 1px solid #e0e0e0; padding: 10px; border-radius: 4px;">
                            <p style="margin-top: 0; background-color: #f0f0f0; padding: 5px; font-weight: bold;">
                                Alumno: <t t-out="alumno or 'Desconocido'"/>
                            </p>
                            
                            <ul>
                                <t t-foreach="partes" t-as="parte">
                                    <li style="margin-bottom: 8px;">
                                        <strong>ID:</strong> <t t-out="parte.get('id')"/><br/>
                                        <strong>Contenido:</strong> <t t-out="parte.get('name')"/><br/>
                                        <strong>Fecha:</strong> <t t-out="parte.get('fecha')"/>
                                    </li>
                                </t>
                            </ul>
                        </div>
                    </t>
                    
                    <p t-if="not ctx.get('email_values')">
                        <em>No se han encontrado partes sin verificar.</em>
                    </p>
                </div>
            </field>
        </record>

    </data>
</odoo>
