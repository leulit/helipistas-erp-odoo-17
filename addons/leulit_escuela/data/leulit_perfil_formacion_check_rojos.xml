<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="ir_cron_send_check_pf_email" model="ir.cron">
            <field name="name">LEULIT - Enviar email de perfiles de formacion mensual</field>
            <field name="model_id" ref="model_leulit_perfil_formacion"/>
            <field name="state">code</field>
            <field name="code">model.check_cursos_acciones()</field>
            <field name="active" eval="False"/>
            <field name="interval_number">2</field>
            <field name="interval_type">months</field>
            <field name="numbercall" eval="-1"/>
        </record>

        <record id="email_template_check_pf" model="mail.template">
            <field name="name">Notificaci贸n perfiles de formaci贸n mensual</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="subject">Check de perfiles de formaci贸n mensual</field>
            <field name="email_from">erp@helipistas.com</field>
            <field name="email_to">ops@helipistas.com</field>
            <field name="body_html"><![CDATA[
                <p>A continuaci贸n se detallan los cursos y acciones que caducaran o que estan caducadas por alumno:</p>
