<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <!-- Template principal que se inyecta en el form -->
    <t t-name="leulit_escuela.TablaResumenAsignaturas" owl="1">
        <div class="o_tabla_resumen_asignaturas">
            <!-- Selector de curso -->
            <div class="row mb-3">
                <div class="col-md-4">
                    <label for="selector_curso_teoricas" class="form-label"><b>Cursos:</b></label>
                    <select 
                        t-ref="selectorCurso" 
                        id="selector_curso_teoricas" 
                        class="form-select">
                        <t t-foreach="state.cursos" t-as="curso" t-key="curso.id">
                            <option 
                                t-att-value="curso.id" 
                                t-att-selected="curso.id === state.cursoSeleccionado ? 'selected' : undefined">
                                <t t-esc="curso.name"/>
                            </option>
                        </t>
                    </select>
                </div>
            </div>

            <!-- Contenedor tablas -->
            <div class="row">
                <div class="col-12 mb-4">
                    <t t-call="leulit_escuela.TablaAsignaturasTeorica"/>
                </div>
                <div class="col-12">
                    <t t-call="leulit_escuela.TablaAsignaturasPractica"/>
                </div>
            </div>
        </div>
    </t>

    <!-- Tabla de asignaturas te칩ricas -->
    <t t-name="leulit_escuela.TablaAsignaturasTeorica" owl="1">
        <table id="tabla_resumen_teoricas" class="minimalistBlack table table-hover">
            <thead>
                <tr>
                    <th colspan="4">
                        <h4>Asignaturas te칩ricas</h4>
                    </th>
                </tr>
                <tr>
                    <th>ID</th>
                    <th>Asignaturas</th>
                    <th>Tiempo prev.</th>
                    <th>Tiempo clase</th>
                </tr>
            </thead>
            <tbody t-ref="tablaTeoricasBody">
            </tbody>
        </table>
    </t>

    <!-- Tabla de sesiones pr치cticas -->
    <t t-name="leulit_escuela.TablaAsignaturasPractica" owl="1">
        <table id="tabla_resumen_practicas" class="minimalistBlack table table-hover">
            <thead>
                <tr>
                    <th colspan="7">
                        <h4>Sesiones pr치cticas</h4>
                    </th>
                </tr>
                <tr>
                    <th>Sesiones</th>
                    <th>Tiempo prev.</th>
                    <th>Doble mando</th>
                    <th>Pilot in command</th>
                    <th>SPIC</th>
                    <th>Otros</th>
                    <th>Totales</th>
                </tr>
            </thead>
            <tbody t-ref="tablaPracticasBody">
            </tbody>
        </table>
    </t>

</templates>