                    <field name="apto" string="Apto"/>
                    <field name="fecha" string="Fecha"/>
                </search>
            </field>
        </record>


        <record id="leulit_20240611_1739_tree" model="ir.ui.view">
            <field name="name">leulit_20240611_1739_tree</field>
            <field name="model">leulit.rel_alumno_evaluacion</field>
