        <record id="leulit_20201106_1602_action" model="ir.actions.act_window">
            <field name="name">Perfil Formación</field>
            <field name="res_model">leulit.perfil_formacion</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_template', '=', False),('inactivo', '=', True)]</field>
