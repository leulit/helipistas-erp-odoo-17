<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record model="ir.ui.view" id="leulit_20210128_1141_form">
            <field name="name">leulit_20210128_1141_form</field>
            <field name="model">leulit.popup_rel_parte_escuela_cursos_alumnos</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="descripcion" js_class="tabla_resumen_asignaturas_vuelo">
                    <group>
                        <field name="vuelo_id" readonly="1"/>
                        <field name="profesor_id" readonly="1"/>
                        <field name="hora_start" widget="float_time" readonly="1"/>
                        <field name="tiempo" widget="float_time" readonly="1"/>
                        <field name="hora_end" widget="float_time" readonly="1"/>
                        <field name="rel_alumnos" readonly="1"/>
                        <field name="rel_curso" domain="[('estado','=','activo')]" options="{'no_create': true, 'no_create_edit': true, 'no_open': true}"/>
                    </group>
                    <table>
                        <tr>
                            <td>
                                <h4>Silabus</h4>
                                <field name="silabus" domain="[('curso_id','=',rel_curso),('tipo','=','practica')]"  readonly="not rel_curso"  context="{'tree_view_ref': 'leulit_escuela.leulit_20211109_1218_tree'}">
                                    <tree>
                                        <field name="id"/>
                                        <field name="asignatura_id"/>
                                        <field name="name"/>
                                        <field name="tipo"/>
                                    </tree>
                                </field>  
                            </td>
                            <td>
                                <table>
                                    <tbody>
                                        <tr>
                                            <td colspan="2">
                                                <div id="container_tabla_asignaturas_practicas"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>  
                            </td>
                        </tr>                                                       
                    </table>
                    <group>
                        <field name="comentario" invisible="1"/>
                        <field name="valoracion" invisible="1"/>
                    </group>
                    <footer>
                        <button name="create_rel_parte_escuela_cursos_alumnos_vuelo" type="object" string="Guardar" class="oe_right oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>



        <record model="ir.ui.view" id="leulit_20210430_1419_form">
            <field name="name">leulit_20210430_1419_form</field>
            <field name="model">leulit.popup_rel_parte_escuela_cursos_alumnos</field>
            <field name="type">form</field>
			<field name="arch" type="xml">
				<form string="descripcion">
					<group>
						<field name="search_tipo" invisible="1"/>
	                	<field name="rel_curso" options="{'no_create': True, 'edit': False, 'no_open':true}" domain="[('estado','=','activo')]"/>
	                	<field name="rel_alumnos"  readonly="not rel_curso and not silabus"  >
	                   		<tree create="false">
	                   			<field name="name"/>
	                   		</tree>
	                   	</field>
	                   	<field name="silabus" domain="[('curso_id','=',rel_curso),('tipo','=','teorica')]"  readonly="not rel_curso" > 
	                   		<tree create="false">
	                   			<field name="silabusDoit" column_invisible="1"/>
	                   			<field name="id"/>
	                   			<field name="asignatura_id"/>
	                   			<field name="name"/>
	                   			<field name="tipo"/>
	                   		</tree>
	                   	</field>
	                </group>
                    <footer>
                    	<button name="create_rel_parte_escuela_cursos_alumnos" type="object" string="Guardar" class="oe_highlight oe_right"/>
                    </footer>
	            </form>
            </field>
        </record>


    </data>
</odoo>
