                        <field name="pf_curso" invisible="1"/>
                        <separator string="Perfiles Formación"></separator>
                        <field name="perfil_formacion_replica_ids" domain="[('perfil_tmpl','=',perfil_formacion_tmpl)]" no_label="1"/>
                    </group>
                    <footer>
                        <button name="end_course_template" type="object" string="Realizar Cambios"  class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="leulit_20230303_1200_form">
            <field name="name">Reiniciar Curso Perfil Formación</field>
