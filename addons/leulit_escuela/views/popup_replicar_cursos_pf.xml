            <field name="arch" type="xml">
                <form string="descripcion">
                    <group col="1">
                        <field name="perfil_formacion_tmpl" invisible="1"/>
                        <field name="pf_curso" invisible="1"/>
                        <separator string="Perfiles Formación"></separator>
                        <field name="perfil_formacion_replica_ids" domain="[('perfil_tmpl','=',perfil_formacion_tmpl)]" no_label="1"/>
                    </group>
                    <footer>
                        <button name="start_course_template" type="object" string="Realizar Cambios"  class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>    

        <record model="ir.ui.view" id="leulit_20230307_1038_form">
            <field name="name">Replicar Curso Perfil Formación</field>
            <field name="model">leulit.popup_replicar_cursos_pf</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="descripcion">
                    <group col="1">
                        <field name="perfil_formacion_tmpl" invisible="1"/>
                        <field name="pf_curso" invisible="1"/>
                        <separator string="Perfiles Formación"></separator>
                        <field name="perfil_formacion_replica_ids" domain="[('perfil_tmpl','=',perfil_formacion_tmpl)]" no_label="1"/>
                    </group>
                    <footer>
                        <button name="replicar_curso_to_perfiles" type="object" string="Realizar Cambios"  class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>        
        

    </data>
</odoo>