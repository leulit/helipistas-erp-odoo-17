<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data> 


        <record model="ir.ui.view" id="leulit_popup_replicar_cursos_pf_form">
            <field name="name">Repicar Cursos Perfil Formación</field>
            <field name="model">leulit.popup_replicar_cursos_pf</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="descripcion">
                    <group col="1">
                        <field name="perfil_formacion_tmpl" invisible="1"/>
                        <separator string="Perfiles Formación"></separator>
                        <field name="perfil_formacion_replica_ids" domain="[('perfil_tmpl','=',perfil_formacion_tmpl)]" no_label="1"/>
                        <separator  string="Cursos por añadir"/>
                        <field name="cursos_añadir" no_label="1" context="{'perfil_formacion':perfil_formacion_replica_ids, 'perfil_formacion_tmpl':perfil_formacion_tmpl}">
                            <tree delete="false" edit="false" create="false">
                                <field name="descripcion"/>
                                <button name="replicar_curso" string="Replicar" type="object"  class="oe_highlight"/>
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button name="metodo_popup_a_ejecutar" type="object" string="Realizar Cambios"  class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

