<?xml version="1.0" encoding="utf-8" ?>
<odoo>


    <record id="hr_timesheet_switch_form_leulit" model="ir.ui.view">
        <field name="name">hr.timesheet.switch resume form</field>
        <field name="model">hr.timesheet.switch</field>
        <field name="inherit_id" ref="project_timesheet_time_control.hr_timesheet_switch_form" />
        <field name="arch" type="xml">
            <field name="task_id" position="after">
                <field name="ruta" groups="leulit.ROperaciones_piloto"/>
            </field>
            <field name="company_id" position="after">
                <div colspan="2">
                    <group col="4">
                        <field name="vuelo_no_hlp" groups="leulit.ROperaciones_piloto"/>
                        <field name="vuelo_tipo_act_id" attrs="{'invisible': [('vuelo_no_hlp', '=', False)]}"/>
                    </group>
                </div>
            </field>
            <field name="project_id" position="attributes">
                <attribute name="required">0</attribute>
            </field>
        </field>
    </record>


    <record id="leulit_202304131007_tree" model="ir.ui.view">
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="hr_timesheet.timesheet_view_tree_user" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='unit_amount']" position="after">
                <field name="ruta" groups="leulit.ROperaciones_piloto"/>
                <field name="guardia" groups="leulit.RCampaÃ±a_operador"/>
                <field name="partner_id" groups="leulit.RolIT_developer"/>
                <field name="modelo" groups="leulit.RolIT_developer"/>
                <field name="idmodelo" groups="leulit.RolIT_developer"/>
            </xpath>
        </field>
    </record>
    

    <record model="ir.ui.view" id="leulit_202304131007_search">
        <field name="name">hr_timesheet_line_search_leulit</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_search" />
        <field name="arch" type="xml">
            <field name="date" position="before">
                <filter string="Imputado en Checklist" name="checklist" domain="[('checklist_id','!=',False)]"/>
                <filter string="Imputado como Ruta" name="ruta" domain="[('ruta','!=',False)]"/>
                <filter string="Imputado como Guardia" name="guardia" domain="[('guardia','!=',False)]"/>
            </field>
        </field>
    </record>

</odoo>
