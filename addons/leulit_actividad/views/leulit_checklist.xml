<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record model="ir.ui.view" id="leulit_20210518_1104_form">
            <field name="name">leulit_20210518_1104_form</field>
            <field name="model">leulit.checklist</field>
            <field name="inherit_id" ref="leulit.leulit_20210518_1104_form" />
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <field name="freelance_pilot" invisible="1"/>
                    <button name="check_freelance_pilot" string="Certificado 16B" type="object" class="btn-primary"  invisible="((not freelance_pilot))" />
                </xpath>
                <xpath expr="//field[@name='items']" position="after">
                    <h2  invisible="((not template))" >Partes de horas</h2>
                    <field name="timesheet_ids" no_label="1"  invisible="((not template))"  context="{'default_name' : descriptor, 'default_project_id' : project_id, 'default_company_id' : company_id, 'default_account_id' : account_id, 'default_unit_amount' : tiempo_previsto}">
                        <tree editable="bottom" default_order="date">
                            <field name="user_id" invisible="1"/>
                            <field name="project_id" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                            <field name="employee_id" readonly="1" widget="many2one_avatar_employee"/>
                            <field name="name"/>
                            <field name="account_id" invisible="1"/>
                            <field name="date" invisible="1"/>
                            <field name="unit_amount" string="Duración" widget="timesheet_uom"/>
                            <field name="guardia" groups="leulit.RCampaña_operador"/>
                        </tree>
                    </field>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
