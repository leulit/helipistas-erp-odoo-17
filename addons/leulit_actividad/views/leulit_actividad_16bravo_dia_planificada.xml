        <record model="ir.ui.view" id="leulit_202012161946_tree">
            <field name="name">Actividad aérea planificada</field>
            <field name="model">leulit.actividad_16bravo_dia_planificada</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Actividad aérea planificada" class="tree_actividad_16bravo_dia" create="false" edit="true">
                    <field name="fecha" string="Fecha"/>
                    <field name="partner" string="Usuario" />
                    <field name="dias_tabajados_mes" string="Días AV mes" />
                    <field name="dias_programados_mes" string="Días P. mes"/>
                    <field name="dias_trab_ano" string="Días AV año"/>
                    <field name="dias_programados_ano" string="Días P. año"/>
