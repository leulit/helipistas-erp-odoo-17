                    <field name="time_flight_range2_plan" string="TV 12m"/>
                    <field name="valid_time_flight_range2_plan" column_invisible="1" />
                    <field name="time_flight_range3_plan" string="TV 3m"/>
                    <field name="valid_time_flight_range3_plan" column_invisible="1" />
