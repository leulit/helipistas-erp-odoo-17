<odoo>
    <data>

        <record id="leulit_20231024_1510_search" model="ir.ui.view">
            <field name="name">leulit_20231024_1510_search</field>
            <field name="model">leulit.account.analytic.line.byday</field>
            <field name="arch" type="xml">                
                <search>
                    <field name="employee_id" string="Empleado"/>                
                </search>
            </field>
        </record>   

        <record model="ir.ui.view" id="leulit_20201209_1607_tree">
            <field name="name">leulit_20201209_1607_tree</field>
            <field name="model">leulit.account.analytic.line.byday</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Helipistas" class="tree_actividad_base_dia" create="false" edit="true" >
                    <field name="fecha" string="Fecha"/>
                    <field name="employee_id" string="Empleado" />
                    <field name="horas_imputadas" string="Imputado" widget="float_time"/>
                    <field name="horas_facturables" string="Facturable" widget="float_time"/>
                </tree>
            </field>
        </record>


        <record id="leulit_202204051541_pivot" model="ir.ui.view">
            <field name="name">Imputación diaria grid</field> 
            <field name="model">leulit.account.analytic.line.byday</field>
            <field name="arch" type="xml">
                <pivot string="Invoices Analysis" disable_linking="True" sample="1">
                    <field name="fecha" type="col"/>
                    <field name="employee_id" type="row"/>
                    <field name="total_horas_imputadas" type="measure" string="Tot. Imp." widget="float_time"/>
                    <field name="horas_imputadas" type="measure" string="Imp." widget="float_time"/>
                    <field name="horas_facturables" type="measure" string="Fact." widget="float_time"/>
                </pivot>
            </field>
        </record>

