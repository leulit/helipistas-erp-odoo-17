        <record id="view_users_form" model="ir.ui.view">
            <field name="name">res.users.form</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form" />
            <field name="arch" type="xml">
                <notebook colspan="4" position="inside">
                    <page string="Personalización">
                        <group>
                            <field name="can_sign_anomalia"/>
                            <field name="can_sign_crs"/>
                            <field name="can_sign_formone"/>
                            <field name="can_sign_boroscopia"/>
                        </group>
                    </page>
                    <page string="OTP">
                        <table>
                            <tr>                                                            
                                <td><button name="sendInstallMail" type="object" string="Enviar email instalación"/></td>
                                <td><button name="sendQRToRegisterMobile" type="object" string="Enviar email registro"/></td>
                                <td><button name="initOTP" type="object" string="Desconectar dispositivo"/></td>
                            </tr>
                        </table>
                        <table>
                            <tr>
                                <td>
                                    <group>
                                        <field name="otp_secret" readonly="1"/>
                                        <field name="otp_type" />
                                        <field name="otp_counter"  invisible="((otp_type == 'time'))"  />
                                        <field name="otp_period"  invisible="((otp_type == 'count'))"  />
                                        <field name="otp_digits" readonly="1"/>
                                        <field name="otp_uri" readonly="1"/>
                                        <field name="otp_deviceinfo" readonly="1"/>
                                    </group>
                                </td>
                                <td style="width:40%%; padding: 10px">
                                    <group>
                                        <field name="otp_qrcode" widget="image" nolabel="1" />
                                    </group>
                                </td>
                            </tr>
                        </table>
                    </page>
                </notebook>
            </field>
        </record>


