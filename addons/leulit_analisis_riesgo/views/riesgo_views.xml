<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================= VISTAS PARA ANÁLISIS DE RIESGO (CABECERA) ============================= -->

    <!-- Vista de árbol simple para Análisis de Riesgo -->
    <record id="view_analisis_riesgo_tree" model="ir.ui.view">
        <field name="name">analisis.riesgo.tree</field>
        <field name="model">analisis.riesgo</field>
        <field name="arch" type="xml">
            <tree string="Análisis de Riesgos" editable="top" decoration-info="state == 'draft'" 
                  decoration-warning="state == 'in_progress'" 
                  decoration-success="state == 'approved'"
                  decoration-muted="state == 'cancelled'">
                <field name="name"/>
                <field name="fecha_analisis"/>
                <field name="responsable_principal"/>
                <field name="total_peligros" string="Peligros"/>
                <field name="total_riesgos" string="Riesgos"/>
                <field name="total_medidas" string="Medidas"/>
                <field name="riesgos_altos" string="Alto"/>
                <field name="riesgos_medios" string="Medio"/>
                <field name="riesgos_bajos" string="Bajo"/>
                <field name="state"/>
                <button name="action_view_peligros" type="object" string="Ver Análisis" 
                        class="btn-primary" icon="fa-search"/>
                <button name="exportar_excel" string="Exportar Excel" 
                        type="object" class="btn-secondary"/>
            </tree>
        </field>
    </record>

    <!-- Vista de formulario simple para Análisis de Riesgo -->
    <record id="view_analisis_riesgo_form" model="ir.ui.view">
        <field name="name">analisis.riesgo.form</field>
        <field name="model">analisis.riesgo</field>
        <field name="arch" type="xml">
            <form string="Análisis de Riesgo">
                <header>
                    <button name="action_view_peligros" string="Ver Peligros" 
                            type="object" class="btn-primary"/>
                    <button name="exportar_excel" string="Exportar Excel" 
                            type="object" class="btn-secondary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,approved"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="fecha_analisis"/>
                        <field name="responsable_principal"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- ============================= VISTA TIPO EXCEL PARA PELIGROS ============================= -->

    <!-- Vista de árbol EDITABLE para Peligros (tipo Excel) -->
    <record id="view_analisis_riesgo_peligro_tree" model="ir.ui.view">
        <field name="name">analisis.riesgo.peligro.tree</field>
        <field name="model">analisis.riesgo.peligro</field>
        <field name="arch" type="xml">
            <tree string="Peligros - Análisis de Riesgo" editable="bottom">
                <field name="analisis_id" readonly="1" optional="hide"/>
                <field name="sequence" widget="handle"/>
                <field name="nombre" required="1"/>
                <field name="total_riesgos" readonly="1"/>
                <button name="action_view_riesgos" type="object" string="Ver Riesgos" 
                        class="btn-secondary" icon="fa-arrow-right"/>
            </tree>
        </field>
    </record>

    <!-- ============================= VISTA TIPO EXCEL PARA RIESGOS ============================= -->

    <!-- Vista de árbol EDITABLE para Riesgos (tipo Excel) -->
    <record id="view_analisis_riesgo_riesgo_tree" model="ir.ui.view">
        <field name="name">analisis.riesgo.riesgo.tree</field>
        <field name="model">analisis.riesgo.riesgo</field>
        <field name="arch" type="xml">
            <tree string="Riesgos - Análisis de Riesgo" editable="bottom"
                  decoration-danger="clasificacion_bruto in ['5A', '5B', '4A']" 
                  decoration-warning="clasificacion_bruto in ['5C', '4B', '3A']">
                <field name="peligro_id" readonly="1" optional="hide"/>
                <field name="sequence" widget="handle"/>
                <field name="nombre" required="1"/>
                <field name="severidad_bruto" required="1"/>
                <field name="probabilidad_bruto" required="1"/>
                <field name="clasificacion_bruto" readonly="1"/>
                <field name="severidad_neto"/>
                <field name="probabilidad_neto"/>
                <field name="clasificacion_neto" readonly="1"/>
                <field name="total_medidas" readonly="1"/>
                <button name="action_view_medidas" type="object" string="Ver Medidas" 
                        class="btn-secondary" icon="fa-arrow-right"/>
                <field name="color" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- ============================= VISTA TIPO EXCEL PARA MEDIDAS DE CONTROL ============================= -->

    <!-- Vista de árbol EDITABLE para Medidas de Control (tipo Excel) -->
    <record id="view_analisis_riesgo_medida_tree" model="ir.ui.view">
        <field name="name">analisis.riesgo.medida.tree</field>
        <field name="model">analisis.riesgo.medida</field>
        <field name="arch" type="xml">
            <tree string="Medidas de Control - Análisis de Riesgo" editable="bottom"
                  decoration-success="estado == 'implemented'" 
                  decoration-warning="estado == 'in_progress'"
                  decoration-info="estado == 'planned'">
                <field name="riesgo_id" readonly="1" optional="hide"/>
                <field name="sequence" widget="handle"/>
                <field name="nombre" required="1"/>
                <field name="estado"/>
                <field name="responsable"/>
                <field name="fecha_implementacion"/>
                <field name="fecha_seguimiento"/>
                <field name="eficacia"/>
                <field name="costo_estimado"/>
                <field name="tarea_asociada" readonly="1" optional="hide"/>
                <button name="crear_tarea" type="object" string="Crear Tarea" 
                        class="btn-primary" icon="fa-plus" column_invisible="tarea_asociada"/>
            </tree>
        </field>
    </record>

    <!-- ============================= VISTAS DE FORMULARIO SIMPLES ============================= -->

    <!-- Vista de formulario para Peligros -->
    <record id="view_analisis_riesgo_peligro_form" model="ir.ui.view">
        <field name="name">analisis.riesgo.peligro.form</field>
        <field name="model">analisis.riesgo.peligro</field>
        <field name="arch" type="xml">
            <form string="Peligro">
                <sheet>
                    <group>
                        <field name="analisis_id" readonly="context.get('default_analisis_id', False)"/>
                        <field name="nombre"/>
                        <field name="total_riesgos" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de formulario para Riesgos -->
    <record id="view_analisis_riesgo_riesgo_form" model="ir.ui.view">
        <field name="name">analisis.riesgo.riesgo.form</field>
        <field name="model">analisis.riesgo.riesgo</field>
        <field name="arch" type="xml">
            <form string="Riesgo">
                <sheet>
                    <group>
                        <group>
                            <field name="peligro_id" readonly="context.get('default_peligro_id', False)"/>
                            <field name="nombre"/>
                            </group>
                        <group>
                            <field name="severidad_bruto"/>
                            <field name="probabilidad_bruto"/>
                            <field name="clasificacion_bruto" readonly="1"/>
                        </group>
                        <group>
                            <field name="severidad_neto"/>
                            <field name="probabilidad_neto"/>
                            <field name="clasificacion_neto" readonly="1"/>
                            <field name="total_medidas" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de formulario para Medidas de Control -->
    <record id="view_analisis_riesgo_medida_form" model="ir.ui.view">
        <field name="name">analisis.riesgo.medida.form</field>
        <field name="model">analisis.riesgo.medida</field>
        <field name="arch" type="xml">
            <form string="Medida de Control">
                <header>
                    <button name="crear_tarea" string="Crear Tarea" type="object" 
                            class="btn-primary" invisible="tarea_asociada"/>
                    <field name="estado" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="riesgo_id" readonly="context.get('default_riesgo_id', False)"/>
                            <field name="nombre"/>
                            <field name="eficacia"/>
                            <field name="costo_estimado"/>
                        </group>
                        <group>
                            <field name="responsable"/>
                            <field name="fecha_implementacion"/>
                            <field name="fecha_seguimiento"/>
                            <field name="tarea_asociada" readonly="1" invisible="not tarea_asociada"/>
                        </group>
                    </group>
                    <field name="notas" placeholder="Notas adicionales..."/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ============================= VISTAS DE BÚSQUEDA SIMPLES ============================= -->

    <!-- Vista de búsqueda para Análisis de Riesgo -->
    <record id="view_analisis_riesgo_search" model="ir.ui.view">
        <field name="name">analisis.riesgo.search</field>
        <field name="model">analisis.riesgo</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="responsable_principal"/>
                <filter name="mis_analisis" string="Mis Análisis" domain="[('responsable_principal', '=', uid)]"/>
                <filter name="borrador" string="Borrador" domain="[('state', '=', 'draft')]"/>
                <filter name="en_progreso" string="En Progreso" domain="[('state', '=', 'in_progress')]"/>
                <filter name="aprobado" string="Aprobado" domain="[('state', '=', 'approved')]"/>
                <group string="Agrupar Por">
                    <filter name="group_responsable" string="Responsable" context="{'group_by': 'responsable_principal'}"/>
                    <filter name="group_estado" string="Estado" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ============================= ACCIONES ============================= -->

    <!-- Acción principal para Análisis de Riesgo -->
    <record id="action_analisis_riesgo" model="ir.actions.act_window">
        <field name="name">Análisis de Riesgos</field>
        <field name="res_model">analisis.riesgo</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ¡Crea tu primer análisis de riesgo!
            </p>
            <p>
                Empieza creando un análisis de riesgo y luego añade peligros, riesgos y medidas de control.
                Usa las vistas tipo Excel para trabajar de forma rápida y eficiente.
            </p>
        </field>
    </record>

    <!-- Acción para Peligros -->
    <record id="action_analisis_riesgo_peligro" model="ir.actions.act_window">
        <field name="name">Peligros</field>
        <field name="res_model">analisis.riesgo.peligro</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Acción para Riesgos -->
    <record id="action_analisis_riesgo_riesgo" model="ir.actions.act_window">
        <field name="name">Riesgos</field>
        <field name="res_model">analisis.riesgo.riesgo</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Acción para Medidas de Control -->
    <record id="action_analisis_riesgo_medida" model="ir.actions.act_window">
        <field name="name">Medidas de Control</field>
        <field name="res_model">analisis.riesgo.medida</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- ============================= MENÚS ============================= -->

    <!-- Menú principal -->
    <menuitem id="menu_analisis_riesgo_root" 
              name="Análisis de Riesgos" 
              sequence="10"/>

    <!-- Menú principal de análisis -->
    <menuitem id="menu_analisis_riesgo" 
              name="Análisis de Riesgos" 
              parent="menu_analisis_riesgo_root" 
              action="action_analisis_riesgo" 
              sequence="10"/>

    <!-- Menús secundarios para acceso directo -->
    <menuitem id="menu_analisis_riesgo_peligros" 
              name="Todos los Peligros" 
              parent="menu_analisis_riesgo_root" 
              action="action_analisis_riesgo_peligro" 
              sequence="20"/>

    <menuitem id="menu_analisis_riesgo_riesgos" 
              name="Todos los Riesgos" 
              parent="menu_analisis_riesgo_root" 
              action="action_analisis_riesgo_riesgo" 
              sequence="30"/>

    <menuitem id="menu_analisis_riesgo_medidas" 
              name="Todas las Medidas" 
              parent="menu_analisis_riesgo_root" 
              action="action_analisis_riesgo_medida" 
              sequence="40"/>

</odoo>