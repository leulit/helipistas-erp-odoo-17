<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>


        <record id="view_move_form_leulit" model="ir.ui.view">
            <field name="name">account.move.form.leulit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_reference']" position="after">
                    <field name="origin"/>
                </xpath>
                <xpath expr="//field[@name='invoice_origin']" position="attributes">
                    <attribute name="invisible">0</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_out_invoice_tree_leulit" model="ir.ui.view">
            <field name="name">account.out.invoice.tree.leulit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_out_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="origin" optional="show"/>
                </xpath>
                <xpath expr="//field[@name='invoice_origin']" position="attributes">
                    <attribute name="optional">show</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>